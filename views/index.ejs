
<!DOCTYPE html>
<html lang="en">
<head>
    <title>All students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
    <link rel="stylesheet" href="assetsfolder/css/style.css">
</head>
<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <a href="/student/add-student" class="btn btn-primary">Add New Students</a><br><br>
          <div class="card p-2">
            <h4>All Students</h4><hr>
            
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Stu.Id</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Photo</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
             
                    <% student_data.forEach((element,index) => { %>
                        <tr>
                           <td><%= index+1 %> </td>
                           <td><%= element.name %>  </td>
                           <td><%= element.email %></td>
                           <td><%= element.phone %></td>
                           <td><img style="height:50px;width:50px" src="/assets/uploads/<%= element.photo %>" alt="nai" /></td>
                          
                           <td>
                             <a class="btn btn-sm btn-primary" href="/student/<%= element.id %>"><i class="fas fa-eye"></i></a>
                             <a class="btn btn-sm btn-warning" href="/student/edit/<%= element.id %>"><i class="fas fa-edit"></i></a>
                             <a class="btn btn-sm btn-danger" href="/student/delete/<%= element.id %>"><i class="fas fa-trash"></i></a>
                           </td>
                       </tr>
                       <% }) %>
                         

               
                 
               
              
               
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>